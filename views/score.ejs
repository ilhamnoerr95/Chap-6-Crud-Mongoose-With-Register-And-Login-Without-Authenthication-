                        <input type="hidden" name="historiesId" value="<%= histories._id %>">
                        <button type="submit" class="btn btn-danger">
                          <i class="fas fa-trash-alt"></i>
                        </button>
                    </form> -->
                </div>
                <div class="col-6">
                    <a href="/scores/edit/<%=histories.user_id%> " class="btn btn-primary">
                        <i class="far fa-edit"></i>
                      </a>
                </div>

            </div>
            </td>
          </tr>

        </tbody>
      </table>
      <% }) %> 
</div>


 

